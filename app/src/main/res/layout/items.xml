<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines"
    >
<!--android:layout_marginBottom="@dimen/md_keylines"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/md_keylines"
        android:paddingLeft="@dimen/md_keylines">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Институт Благородных Роккерш 1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rounded_corner_for_title"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="два часа назад"
            android:id="@+id/card_date"
            android:layout_below="@id/card_title"
            android:textSize="16sp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="@color/test_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Просрочено"
            android:id="@+id/card_status"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_corner_for_status"
            android:layout_below="@id/card_title"
            android:layout_toRightOf="@id/card_date"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_date"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginTop="@dimen/md_keylines"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Velit voluptatem quidem repudiandae quis cumque natus quos minus aspernatur aliquam distinctio nisi hic nulla, ex aut maxime perspiciatis earum libero sequi."
            android:ellipsize="end"
            android:textColor="@color/test_tc"
            android:textSize="@dimen/article_subheading" />

        <Button
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_text"
            android:layout_alignParentRight="true"
            style="?android:attr/borderlessButtonStyle"
            android:background="@null"
            android:textColor="@color/test_tc"
            android:text="LOOK"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/button_cancel_bc"-->
            <!--android:layout_marginTop="8dp"-->
            <!--app:srcCompat="@drawable/ic_clear_white_24dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:id="@+id/removeTask" />-->
    </RelativeLayout>
    <!--<TextView android:layout_height="1dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="@color/test_border"></TextView>-->
</android.support.v7.widget.CardView>
